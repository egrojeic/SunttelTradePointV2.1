        <td class="td-1">
            <b>BILL to:</b>
        </td>
         <td class="td-2">
            <b>SHIP to:</b>
        </td>
    </tr>
      <tr >
        <td class="tr-1">
         @(Model.BillName!=null ? Model.BillName:"")
        </td>
         <td class="tr-2">
            @(Model.ShipName!=null ? Model.ShipName:"")
        </td>
    </tr>
       <tr >
        <td class="tr-1">
            @(Model.BillAddressAndPhone!=null ? Model.BillAddressAndPhone:"")
        </td>
         <td class="tr-2">
        @(Model.ShipAddressAndPhone!=null ? Model.ShipAddressAndPhone:"")
        </td>
    </tr>
  
       <tr >
        <td class="tr-1">
         @(Model.BillCity!=null ? Model.BillCity:"")
        </td>
         <td class="tr-2">
           @(Model.ShipCity!=null ? Model.ShipCity:"")
        </td>
    </tr>
</table>


<table class="table-sale-1" border="0">
    <tbody>
        <tr class="tr-1">
            <td class="td-1">
                Customer #  
            </td>
            <td class="td-2">
                @(Model.BillCity!=null ? Model.CustomerNumber:"")
            </td>          
            <td  class="td-3" >
                Salesman
            </td>
            <td  class="td-4" >
                 @(Model.SalesMan!=null ? Model.SalesMan:"")
            </td>
        </tr>
        <tr>
            <td>
                Customer P.O
            </td>
            <td>
                 @(Model.CustomerPO!=null ? Model.CustomerPO:"")
            </td>
            <td>
            </td>
            <td>
            </td>
        </tr>
    </tbody>
</table>

<table class="table-sale-2">
    <tr class="tr-1">
        <td class="td-1">
            Salesrep
        </td>
        <td class="td-2">
            Shipped by
        </td>
        <td class="td-3">
            Airwaybill
        </td>
        <td class="td-4">
            FOB
        </td>
        <td class="td-5">
            Payment Term
        </td>
    </tr>
    <tr>
        <td>
            EVAN KERKHOVEN
        </td>
        <td>
            South Florida Transit
        </td>
        <td></td>
        <td></td>
        <td>
            COD
        </td>
    </tr>
</table>

<table class="table-sale-3">
    <tr class="tr-1">
        <td class="td-1">
            Farm/Sku
        </td>
        <td class="td-2" >
            Item # / Flower
        </td>
        <td class="td-3">
            Category
        </td>
        <td class="td-4" >
            Grade
        </td>
        <td class="td-5">
            Pack
        </td>
        <td>
            Color
        </td class="td-6">
        <td>
            Qty
        </td>
        <td class="td-7">
            Price
        </td>
        <td class="td-8">
            Ext. Price
        </td>
    </tr>
    @if (@Model.SalesItems != null)
    {
        @foreach (var detail in @Model.SalesItems)
        {
     
        <tr>
        <td>@(detail.Provider!=null && detail.Provider.Name !=null ? detail.Provider.Name:"")</td>
        <td>@(detail.TransactionalItem!=null && detail.TransactionalItem.Name!=null ? detail.TransactionalItem.Name:"")</td>
        <td></td>
        <td></td>
        <td>@(detail.TransactionalItemSpecs!=null ? detail.TransactionalItemSpecs.PackLayersToSale:"")</td>
        <td></td>
        <td align="right" >@detail.Qty.ToString("N2")</td>
        <td align="right" >@detail.UnitPrice.ToString("N2")</td>
        <td align="right" >@detail.Total.ToString("N2")</td>
    </tr>
           
        }
    }
    
   
</table>

<table  class="table-sale-4">
     <tr class="tr-3">
        <td valign="top" class="general-td-1">
            <table class="table-sale-5">
