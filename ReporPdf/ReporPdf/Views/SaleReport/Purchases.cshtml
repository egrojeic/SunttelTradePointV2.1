    </td>
    <td class="td-2" ><h3><b>Invoice</b></h3></td>
    <td class="td-3" ><h3><b>@Model.Invoice</b></h3></td>
    <td class="td-4" ><h3><b>Date</b></h3></td>
    <td class="td-5" ><h3><b>@Model.Date</b></h3></td>
    </tr>
</table>

<table class="table-qb"  border="0">
    <tr>
        <td class="td-1"> <b>@Model.SquadName</b> </td>
        <td></td>
    </tr>
     <tr>
        <td>@Model.SquadAddress</td>
        <td rowspan="2" align="center"></td>
    </tr>
     <tr>
        <td>
        @(Model.SquadTollFree!="" && Model.SquadTollFree!=null ?$"TOLL FREE:{Model.SquadTollFree}":"" )
        @(Model.SquadPhone!="" && Model.SquadTollFree!=null ?$"PHONE:{Model.SquadTollFree}":"" )
        </td>       
    </tr>
</table>

<table class="table-bill-ship" border="0">
