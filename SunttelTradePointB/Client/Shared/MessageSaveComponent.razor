@if (isVisible)
{
    @if(status == 0)
    {
        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
            <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </symbol>
        </svg>
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
            <div>
                @message
            </div>
            <span style="right: 10px; position:absolute; font-size:24px; cursor:pointer">
                <i class="fa-sharp fa-regular fa-circle-xmark" @onclick="Close"></i>
            </span>
        </div>
    } else if(status == 1)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <span style="font-size:24px;" class="me-2">
                <i class="fa-solid fa-circle-xmark"></i>
            </span>
            <div>
                @message
            </div>
            <span style="right: 10px; position:absolute; font-size:24px; cursor:pointer">
                <i class="fa-sharp fa-regular fa-circle-xmark" @onclick="Close"></i>
            </span>
        </div>
    } else if(status == 2)
    {
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <span style="font-size:24px;" class="me-2">
                <i class="fa-solid fa-circle-info"></i>
            </span>
            <div>
                @message
            </div>
            <span style="right: 10px; position:absolute; font-size:24px; cursor:pointer">
                <i class="fa-sharp fa-regular fa-circle-xmark" @onclick="Close"></i>
            </span>
        </div>
    }
}


@code {
    [Parameter]
    public string message { get; set; } = "";
    [Parameter]
    public bool isVisible { get; set; } = false;
    [Parameter]
    public int status { get; set; } = 0;

    string background = "";

    protected override void OnInitialized()
    {
        if (status == 0) background = "#00ccff";
        if (status == 1) background = "#dc3545";
        if (status == 2) background = "#5959ff";
    }

    private void Close()
    {
        isVisible = false;
    }
}
