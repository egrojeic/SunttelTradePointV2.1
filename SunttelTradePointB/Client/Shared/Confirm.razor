@if (GetVisible(Id))
{
    <div class="container-alert-delete">
        <div class="item-btn">
            <buton @onclick='()=>CancelAction.InvokeAsync(null)' class="cancel"><i class="bi bi-x-circle-fill"></i></buton>
            <label class="label-style">@TextValue</label>
            <buton @onclick='()=>ConfirmIdAction.InvokeAsync(Id)' class="img-delete"><i class="bi bi-trash-fill"></i></buton>
        </div>
    </div>
}
else
{
    <buton @onclick='()=>SelectIdAction.InvokeAsync(Id)' class="img-delete"><i class="bi bi-trash-fill"></i></buton>
}

@if (EditEnable)
{
    @if (GetVisibleEdit(Id))
    {
        <buton @onclick='()=>SavedAction.InvokeAsync(Id)' class="img-delete"><span class="e-menu-icon fa-solid fa-floppy-disk"></span></buton>
    }
    else
    {
        <buton @onclick='()=>EditAction.InvokeAsync(Id)' class="img-delete"><i class="bi bi-pencil-square"></i></buton>
    }
}


@code {
    [Parameter]
    public string Id { get; set; }
    [Parameter]
    public string IdSelect { get; set; }
    [Parameter]
    public string IdEdit { get; set; }
    [Parameter]
    public string TextValue { get; set; } 
    [Parameter]
    public bool EditEnable { get; set; }
    [Parameter]
    public EventCallback CancelAction { get; set; }
    [Parameter]
    public EventCallback<string> ConfirmIdAction { get; set; }
    [Parameter]
    public EventCallback<string> SelectIdAction { get; set; }
    [Parameter]
    public EventCallback<string> EditAction { get; set; }
    [Parameter]
    public EventCallback<string> SavedAction { get; set; }

    protected override void OnInitialized()
    {
        LoadData();
        base.OnInitialized();
    }

    protected override void OnParametersSet()
    {
        LoadData();
        base.OnParametersSet();
    }

    public async void LoadData()
    {

    }


    public bool GetVisible(string _Id)
    {
        if (this.IdSelect == _Id)
        {
            return true;
        }
        else
        {
            return false;
        }
    }

    public bool GetVisibleEdit(string _Id)
    {
        if (this.IdEdit == _Id)
        {
            return true;
        }
        else
        {
            return false;
        }
    }

}


