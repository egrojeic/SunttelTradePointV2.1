@page "/PDFAnalyse"

<PageTitleComponent Title="IA Tools" IconName="recipeModel.png"
                    Description="Here you can insert a document in pdf format to be analyzed and ask questions regarding the document">
</PageTitleComponent>

<h1>insert your PDF to be analyzed</h1>

<div class="mb-3">
    <label for="pdfInput" class="form-label text-center">Upload PDF file:</label>
    <InputFile type="file" class="form-control" id="pdfInput" accept=".pdf" OnChange="@HandleFileUpload" />
</div>

<div class="mb-3">
    <label for="questionInput" class="form-label">Ask a question:</label>
    <input type="text" class="form-control" id="questionInput" placeholder="Enter your question here" @bind-value="question" />
</div>

<div class="mb-3">
    <label for="answerInput" class="form-label">Answer:</label>
    <input type="text" class="form-control" id="answerInput" readonly @bind-value="answer" />
</div>

@code {
    private string question = "";
    private string answer = "";
    private IBrowserFile file;

    private void HandleFileUpload(InputFileChangeEventArgs e)
    {
        file = e.File;
    }

}

<style>
    h1 {
        margin-top: 1rem;
        margin-bottom: 2rem;
        font-weight: bold;
    }

    .mb-3 {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: bold;
    }
</style>
