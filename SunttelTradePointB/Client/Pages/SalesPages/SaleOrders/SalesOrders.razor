                    <small class="text-muted">And some muted small print.</small>
                </a>
            </div>
        </div>
    }
</div>

<div class="container">
    @if (page == 1)
    {
        <All></All>
    }
    else if (page == 2)
    {
        <Cancelled></Cancelled>
    }
    else if (page == 3)
    {
        <Confirmed></Confirmed>
    }
    else if (page == 4)
    {
        <PendingOrders></PendingOrders>
    }
    else if (page == 5)
    {
        <Shipped></Shipped>
    }
</div>


@code {
    bool showNotificationsMenu = false;
    public int page = 1;

    public void ChangeTab(int _page)
    {
        page = _page;
    }

    void ToggleNotificationsMenu()
    {
        showNotificationsMenu = !showNotificationsMenu;
    }

    public void NavigateToChat()
    {
        navigation.NavigateTo("/ChatGeneral");
    }
}
