@page "/SalesOrders"

@inject NavigationManager navigation

<PageTitleComponent Title="Sale Orders" IconName="commercialDocument.png"
                    Description="@("Farm Control")">
</PageTitleComponent>

<div class="ordernav">
    <ul class="nav nav-underline">
        <li class="nav-item">
            <a class="nav-link" aria-current="page" @onclick="() => ChangeTab(1)">All</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" @onclick="() => ChangeTab(4)">Pending Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" @onclick="() => ChangeTab(3)">Confirmed</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" @onclick="() => ChangeTab(2)">Canceled</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" @onclick="() => ChangeTab(5)">Shipped</a>
        </li>
    </ul>
    <div>
        <i class="mx-3 oi oi-comment-square" id="iconNav" @onclick="NavigateToChat">
        </i>
        <i class="mx-3 oi oi-bell" id="iconNav" @onclick="ToggleNotificationsMenu">
            <span class="position-absolute top-0 start-100 translate-middle p-2 bg-danger border border-light rounded-circle">
                <span class="visually-hidden">New alerts</span>
            </span>
        </i>
    </div>
    @if (showNotificationsMenu)
    {
        <div class="noti">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action" aria-current="true">
