@page "/EDIManager"
@inject HttpClient Http
@using System.Text.Json.Serialization

<div class="container">

    <br />   

    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12"></div>
        <div class="col-lg-4 col-md-4 col-sm-12">
            <div class="card mb-3 text-center">
                <div class="card-header centrar">
                    <p style="padding: 0;margin: 0;text-align: center">

                        <span style="font-size: 1.2rem !important; color: #004A84; border-bottom: solid #FFAB00; font-weight:600;">
                            Migrate Customers
                        </span>

                    </p>
                </div>
                <div class="card-body text-primary">
                    <button type="button" class="btn btn-outline-dark  btn-sm" onclick="@(()=> @MigrarClientes())">Migrar</button>
                </div>
                @if (!(string.IsNullOrEmpty(msgResponse)))
                {
                    <div class="card-footer text-muted">
                        <strong>@msgResponse</strong>
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12"></div>
    </div>




</div>
